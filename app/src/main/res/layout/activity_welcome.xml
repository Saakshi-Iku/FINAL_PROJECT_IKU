<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="bottom"
    android:padding="24dp"
    android:paddingTop="16dp"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="?android:selectableItemBackground"
        app:srcCompat="@drawable/iku" />

    <com.facebook.login.widget.LoginButton
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:elevation="2dp"
        android:layout_above="@id/google_signin_button"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signin_button"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_above="@id/email_signin_button"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/email_signin_button"
        android:layout_width="259dp"
        android:layout_height="40dp"
        android:layout_above="@id/policyText"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_email_24"
        android:elevation="4dp"
        android:text="Email"
        android:textColor="#66B2B2"
        app:strokeColor="#66B2B2"
        app:strokeWidth="1dp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/policyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/welcome_policy"
        android:textAlignment="center"
        android:textColor="#858585" />

</RelativeLayout>