<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Divider-->
    <View
        android:id="@+id/div"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#30000000"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--Profile image-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <!--Name-->
    <TextView
        android:id="@+id/commenterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/div"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintEnd_toStartOf="@id/timestamp"
        android:text="Abhishake"
        android:textSize="14sp"
        android:layout_marginHorizontal="5dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"/>

    <!--Timestamp-->
    <TextView
        android:id="@+id/timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintStart_toEndOf="@id/commenterName"
        app:layout_constraintEnd_toStartOf="@id/heartUpButton"/>

    <!--Comment-->
    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This is a test comment description"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginBottom="3dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintEnd_toStartOf="@id/heartUpButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        app:layout_constraintTop_toBottomOf="@id/commenterName" />

    <!--Heart button-->
    <ImageView
        android:id="@+id/heartUpButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="@id/commenterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comment"
        android:src="@drawable/ic_heart_unfilled" />

</androidx.constraintlayout.widget.ConstraintLayout>