<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Top bar-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
                app:layout_constraintEnd_toEndOf="@+id/topAppBar"
                app:layout_constraintStart_toStartOf="@+id/topAppBar"
                app:layout_constraintTop_toTopOf="@+id/topAppBar">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <!--Page icon-->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_circle_account" />

                    <!--Page title-->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Profile"
                        android:textSize="18sp" />

                </LinearLayout>

            </RelativeLayout>

            <!--Settings button-->
            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_settings_24"
                app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
                app:layout_constraintEnd_toEndOf="@+id/topAppBar"
                app:layout_constraintTop_toTopOf="@+id/topAppBar" />

            <!--Notifications button-->
            <ImageView
                android:id="@+id/notificationsButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_notifications_36"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
                app:layout_constraintEnd_toStartOf="@+id/settingsButton"
                app:layout_constraintTop_toTopOf="@+id/topAppBar" />

            <!--new notification indicator-->
            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_margin="12dp"
                android:background="@drawable/hearts_button_background"
                android:backgroundTint="@android:color/holo_red_light"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/notificationsButton"
                app:layout_constraintTop_toTopOf="@id/notificationsButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Profile image-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--User name-->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:paddingHorizontal="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/edit_profile_button"
                app:layout_constraintEnd_toStartOf="@id/edit_profile_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toTopOf="parent" />

            <!--About user-->
            <LinearLayout
                android:id="@+id/userBioView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintEnd_toStartOf="@+id/edit_profile_button"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toBottomOf="@id/userName"
                app:layout_constraintHorizontal_bias="0.0">

                <ImageView
                    android:id="@+id/userBioIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_about_24" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/userBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="6"
                    android:textAlignment="center"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>

            <!--Link in bio-->
            <LinearLayout
                android:id="@+id/linkInBioView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toBottomOf="@id/userBioView">

                <ImageView
                    android:id="@+id/linkInBioIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_baseline_insert_link_24"
                    android:visibility="visible" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/linkInBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:maxLines="2"
                    android:textAlignment="center"
                    android:textColorLink="@color/colorAccent"
                    android:textSize="13sp"
                    android:visibility="visible" />

            </LinearLayout>

            <!--Edit profile-->
            <ImageButton
                android:id="@+id/edit_profile_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:background="@drawable/hearts_button_background"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_edit_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--headline numbers-->
            <LinearLayout
                android:id="@+id/headlineNumbers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:isScrollContainer="false"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linkInBioView">

                <!--Hearts count-->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/profile_selected_tab"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="5dp">

                    <TextView
                        android:id="@+id/userHearts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="25"
                        android:textSize="24sp"
                        android:visibility="visible"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hearts won" />

                </LinearLayout>

                <!--divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@android:color/darker_gray"
                    android:visibility="gone"/>

                <!--Habits count-->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingVertical="5dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/userHabits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="2"
                        android:textSize="24sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habit streaks" />

                </LinearLayout>

            </LinearLayout>

            <!--Badges View-->
            <LinearLayout
                android:id="@+id/badgesView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#90DCDCDC"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/addHabitButton"
                app:layout_constraintTop_toBottomOf="@id/headlineNumbers">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/badgesHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Badges:\n(134)"
                        android:textSize="12sp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@id/badges" />

                    <HorizontalScrollView
                        android:id="@+id/badges"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:overScrollMode="never"
                        android:paddingStart="70dp"
                        android:scrollbars="none"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="bottom">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_marginHorizontal="4dp"
                                android:src="@drawable/ic_iku" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="'The Minimilist Badge' \nearned for following posts in Aug 2020:"
                    android:textSize="12sp"
                    android:visibility="visible" />


            </LinearLayout>

            <!--Add habit button-->
            <LinearLayout
                android:id="@+id/addHabitButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#33DCDCDC"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/recyclerView"
                app:layout_constraintTop_toBottomOf="@id/badgesView">

                <ImageView
                    android:id="@+id/buttonIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/buttonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Add / edit habits"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>


            <!--recycler view-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#66DCDCDC"
                android:minHeight="20dp"
                android:paddingHorizontal="8dp"
                app:layout_constraintBottom_toTopOf="@id/endOfListText"
                app:layout_constraintTop_toBottomOf="@id/badgesView" />

            <TextView
                android:id="@+id/endOfListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_receive_heart_bubble"
                android:backgroundTint="#66DCDCDC"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="That's All Folks!"
                android:textSize="12dp"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/recyclerView" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>