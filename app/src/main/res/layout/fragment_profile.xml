<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Top bar-->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
                app:layout_constraintEnd_toEndOf="@+id/topAppBar"
                app:layout_constraintStart_toStartOf="@+id/topAppBar"
                app:layout_constraintTop_toTopOf="@+id/topAppBar">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <!--Page icon-->
                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_circle_account" />

                    <!--Page title-->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Profile"
                        android:textSize="18sp"/>

                </LinearLayout>

            </RelativeLayout>

            <!--Settings button-->
            <ImageView
                android:id="@+id/settingsButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_settings_24"
                app:layout_constraintBottom_toBottomOf="@+id/topAppBar"
                app:layout_constraintEnd_toEndOf="@+id/topAppBar"
                app:layout_constraintTop_toTopOf="@+id/topAppBar" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Profile image-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--User name-->
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="10dp"
                android:maxLines="1"
                android:textSize="20sp"
                android:textStyle="bold"

                app:layout_constraintEnd_toStartOf="@id/edit_profile_button"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/edit_profile_button"/>
            <!--About user-->
            <ImageView
                android:id="@+id/userBioIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_about_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/userBio"
                app:layout_constraintStart_toStartOf="@id/userBio"
                app:layout_constraintTop_toTopOf="@id/userBio"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/userBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:maxLines="6"
                android:paddingVertical="10dp"
                android:paddingStart="45dp"
                android:paddingEnd="10dp"
                android:textAlignment="center"
                android:textSize="13sp"
                android:visibility="visible"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_button"/>

            <!--Link in bio-->
            <ImageView
                android:id="@+id/linkInBioIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_insert_link_24"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@id/linkInBio"
                app:layout_constraintStart_toStartOf="@id/linkInBio"
                app:layout_constraintTop_toTopOf="@id/linkInBio"
                app:layout_constraintVertical_bias="0.0" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/linkInBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginHorizontal="5dp"
                android:minLines="1"
                android:paddingStart="45dp"
                android:paddingEnd="10dp"
                android:paddingVertical="10dp"
                android:textAlignment="center"
                android:textColorLink="@color/colorAccent"
                android:textSize="13sp"
                android:visibility="visible"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/profileImage"
                app:layout_constraintTop_toBottomOf="@id/userBio"/>

            <!--Edit profile-->
            <ImageButton
                android:id="@+id/edit_profile_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                android:background="@drawable/hearts_button_background"
                android:backgroundTint="@color/white"
                android:elevation="2dp"
                android:src="@drawable/ic_baseline_edit_24"/>

            <!--headline numbers-->
            <LinearLayout
                android:id="@+id/headlineNumbers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:isScrollContainer="false"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linkInBio">

                <!--Hearts count-->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/profile_selected_tab"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userHearts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textSize="30dp"
                        android:text="25"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hearts won" />

                </LinearLayout>

                <!--divider-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:background="@android:color/darker_gray"/>

                <!--Habits count-->
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userHabits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:textSize="30dp"
                        android:text="2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Habits" />

                </LinearLayout>

            </LinearLayout>

            <!--Add habit button-->

            <LinearLayout
                android:id="@+id/addHabitButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:visibility="visible"
                android:background="#25DCDCDC"
                app:layout_constraintTop_toBottomOf="@id/headlineNumbers">

                <ImageView
                    android:id="@+id/buttonIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:gravity="center"
                    android:paddingEnd="5dp"
                    android:src="@drawable/ic_baseline_edit_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/buttonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Add / edit habits"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

            </LinearLayout>

            <!--recycler view-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:background="#25DCDCDC"
                android:paddingHorizontal="8dp"
                app:layout_constraintTop_toBottomOf="@id/addHabitButton"
                app:layout_constraintBottom_toTopOf="@id/endOfListText"/>

            <TextView
                android:id="@+id/endOfListText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/recyclerView"
                app:layout_constraintBottom_toBottomOf="parent"
                android:paddingVertical="5dp"
                android:visibility="visible"
                android:text="That's All Folks!"
                android:textSize="12dp"
                android:gravity="center"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</RelativeLayout>