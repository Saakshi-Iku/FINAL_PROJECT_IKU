<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/habitCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="#50DCDCDC"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <!--Habit preview-->
            <LinearLayout
                android:id="@+id/habitPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/habitIllustration"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/habitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:linksClickable="true"
                    android:maxLines="4"
                    android:paddingVertical="2dp"
                    android:text="This is a test description for the habit that will be shown here. This is a test description for the habit that will be shown here."
                    android:textSize="15sp" />

            </LinearLayout>

            <!--Habit level info-->
            <RelativeLayout
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/habitPreview">

                <!--Level info-->
                <TextView
                    android:id="@+id/streakInformation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/supportHabit"
                    android:layout_alignBottom="@id/supportHabit"
                    android:layout_alignParentStart="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@+id/supportHabit"
                    android:text="On streak since 12 Jan 2020!"
                    android:textSize="12dp" />

                <!--progress bar-->
                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_alignStart="@id/supportHabit"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="10dp"
                    android:layout_toStartOf="@+id/supportHabit"
                    android:progressBackgroundTint="@color/colorPrimary" />

                <!--Habits support-->
                <LinearLayout
                    android:id="@+id/supportHabit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <!--Heart button-->
                    <ImageButton
                        android:id="@+id/supportHabitButton"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:padding="6dp"
                        android:background="@color/fui_transparent"
                        android:src="@drawable/ic_fire_filled"
                        android:visibility="visible"/>

                    <!--Hearts for habits-->
                    <TextView
                        android:id="@+id/supportCount"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="25"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <!--Edit button-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2px" />

            <!--Timer-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_timer_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="6d:23h"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <!--CTA button-->
            <Button
                android:id="@+id/CTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textAllCaps="false"
                android:hapticFeedbackEnabled="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>