<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/habitCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#50DCDCDC"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">

            <!--Habit preview-->
            <LinearLayout
                android:id="@+id/habitPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/habitIllustration"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/habitName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:linksClickable="true"
                    android:maxLines="4"
                    android:paddingVertical="2dp"
                    android:text="This is a test description for the habit that will be shown here. This is a test description for the habit that will be shown here."
                    android:textSize="15sp"/>

            </LinearLayout>

            <!--Edit habit-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/editHabit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/habitPreview">

                <!--Name of the habit-->
                <EditText
                    android:id="@+id/editHabitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="What sustainable habit would you like to track?"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingVertical="15dp"
                    android:textAlignment="viewStart"
                    android:textSize="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="visible"/>

                <TextView
                    android:id="@+id/charCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:paddingBottom="15dp"
                    android:text="140"
                    android:textSize="10dp"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="@id/editHabitName"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--How often is habit tracked-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/editHabitName">

                    <TextView
                        android:id="@+id/frequencyTitle"
                        android:layout_width="105dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Remind:"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/frequencyTitle"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/frequencyChipGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@id/frequencyTitle"
                            app:layout_constraintTop_toTopOf="parent"
                            android:overScrollMode="never"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Once in 3 days"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Once in a week"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Once in a month"
                                android:textSize="12sp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--What week do they want to be reminded-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/weekSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/frequency">

                    <TextView
                        android:id="@+id/weekSelectionTitle"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Select a week:"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/weekSelectionTitle"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/weekSelectionChipGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/daySelectionTitle"
                            app:layout_constraintTop_toTopOf="parent"
                            android:overScrollMode="never"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Week 1"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Week 2"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Week 3"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Week 4"
                                android:textSize="12sp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--What day do they want to be reminded-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/daySelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/weekSelection">

                    <TextView
                        android:id="@+id/daySelectionTitle"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Select a day:"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/daySelectionTitle"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/daySelectionChipGroup"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/daySelectionTitle"
                            app:layout_constraintTop_toTopOf="parent"
                            android:overScrollMode="never"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mon"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tue"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wed"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fri"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sat"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sun"
                                android:textSize="12sp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--What time slot do they want to be reminded of it-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/timeSlot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/daySelection">

                    <TextView
                        android:id="@+id/timeSlotTitle"
                        android:layout_width="105dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:text="Best time to\nremind you:"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/timeSlotTitle"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/timeSlotChipGroup"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:nestedScrollingEnabled="true"
                            android:overScrollMode="never"
                            app:singleLine="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Morning"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Afternoon"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Evening"
                                android:textSize="12sp" />

                            <com.google.android.material.chip.Chip
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Night"
                                android:textSize="12sp" />

                        </com.google.android.material.chip.ChipGroup>

                    </HorizontalScrollView>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--Habit level info-->
            <RelativeLayout
                android:id="@+id/streakInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/editHabit">

                <TextView
                    android:id="@+id/levelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level: Novice"
                    android:textSize="12dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignStart="@id/supportCount"
                    android:layout_alignBottom="@id/progressBar"/>

                <!--progress bar-->
                <androidx.core.widget.ContentLoadingProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:progressBackgroundTint="@color/colorPrimary"
                    android:layout_marginHorizontal="10dp"
                    android:layout_alignStart="@id/supportCount"
                    android:layout_alignBottom="@id/supportCount"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <!--Heart button-->
                <ImageView
                    android:id="@+id/supportHabitButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="6dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_fire_filled" />

                <TextView
                    android:id="@+id/supportCount"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="25"
                    android:layout_below="@id/supportHabitButton"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <!--Edit button-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/white"
                android:text="Edit"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/streakInformation"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2px" />

            <!--Timer-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/streakInformation">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_timer_24"
                    app:tint="@color/colorPrimary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="6d:23h"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

            <!--CTA button-->
            <Button
                android:id="@+id/CTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/streakInformation" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>